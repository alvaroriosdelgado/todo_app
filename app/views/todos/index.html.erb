<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="jumbotron">
        <h1 class="text-center">Listado de Tareas</h1>

        <table class="table">
          <thead>
            <tr>
              <td>
                Tarea
              </td>
              <td>
                Estado
              </td>
            </tr>
          </thead>
          <tbody>
            <% @todos.each do |t| %>
            <tr>
              <td><%= t.description %></td>
              <td><%= t.completed %></td>
              <td>Ver</td>
              <td>Editar</td>
              <td>Borrar</td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <%= link_to "Agregar nueva tarea", todos_new_path, class:"btn btn-success" %>
      </div>

    </div>
  </div>
</div>
