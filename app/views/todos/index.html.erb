<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="jumbotron">
        <h1 class="text-center">Listado de Tareas</h1>

        <table class="table">
          <thead>
            <tr>
              <td colspan="5">
                Tareas
              </td>
            </tr>
          </thead>
          <tbody>
            <% @todos.each do |t| %>

            <tr>
              <td><%= t.description %></td>
              <td><%= link_to "Show", todo_path(t), :class => "btn btn-primary" %></td>
              <td><%= link_to "Edit", edit_todo_path(t), :class => "btn btn-primary" %></td>
              <td><%= link_to "Delete", todo_path(t), method: :delete, :class => "btn btn-primary" %></td>
              <% if t.completed %>
                <td><%= link_to "Complete", complete_path(t), :class => "btn disabled" %></td>
              <% else %>
                <td><%= link_to "Complete", complete_path(t), :class => "btn btn-success" %></td>
              <% end %>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <%= link_to "Agregar nueva tarea", todos_new_path, class:"btn btn-success" %>
    </div>
  </div>
</div>
